#include <stdio.h>
int main()

{
    float x, y, resultado;
    char operador;

    printf("Entre com um n√∫mero: ");
    scanf("%f %c %f", &x, &operador, &y);

    switch(operador){
        case '+': 
            resultado = x + y; 
            break;

        case '-': 
            resultado = x-y;
            break; 
    }
    
    printf("Resultado: %2.f\n", resultado);
}
